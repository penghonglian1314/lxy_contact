<view class='view-page' style="height:100vh">
  <navbar page-name="举报"></navbar>
  <view class='page-content'>
    
    <scroll-view show-scrollbar="false" scroll-y="true" class="radioGroup" scroll-top="{{scrollTop}}">
      <van-checkbox-group value="{{ result }}" bind:change="onChange">
        <van-cell-group>
          <van-cell
            wx:for="{{ list }}"
            wx:key="index"
            title="{{ item }}"
            value-class="value-class"
            clickable
            data-index="{{ index }}"
            bind:click="toggle"
          >
            <van-checkbox
              catch:tap="noop"
              class="checkboxes-{{ index }}"
              name="{{ item }}"
              checked-color="#FF0055"
            />
          </van-cell>
        </van-cell-group>
      </van-checkbox-group>
      <view class="phone" >
        <van-field
          label="手机号"
          model:value="{{ phone }}"
          placeholder="请输入手机号"
          border="{{ true }}"
        />
      </view>
      <van-field
        label="其他"
        model:value="{{ other }}"
        placeholder="说些什么吧..."
        border="{{ true }}"
      />
      <view class="upload" >
        <van-uploader
          bind:delete = "_del"
          file-list="{{ fileList }}"
          deletable="{{ true }}"
          max-count="2"
          bind:after-read="afterRead"
        />
      </view>
    </scroll-view>
    
    <view class="btn">
      <van-button round color="#FF0055" type="default" bind:tap="submit">确定</van-button>
    </view>
  </view>
</view>
