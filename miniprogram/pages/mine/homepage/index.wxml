				<view class="body">
					<view class="top">
						<view class="img">
							<image mode="aspectFill" src="{{mine.AvatarUrl}}"></image>
						</view>

						<view class="top1">
							<view>
								{{mine.MemberName}}
							</view>
							

							<view class="con_tet3">
								<image mode="aspectFit" src="{{mine.Level==0? '../../../images/xr.png':'../../../images/vip.png'}}"></image>
							</view>
						</view>

						
					</view>

					<view class="body_con">
						{{mine.City}} {{mine.Gender==0? '男': '女'}} {{mine.Birth!='0'? mine.Birth+'岁': ''}}
					</view>

					<view class="bottom">
						<view class="right">
							<van-button wx:if="{{IsphotoShow}}" size="small" type="default" bindtap="toupdateMeaasge">编辑</van-button>
							<van-button wx:if="{{IsphotoShow==false&&IsLinkShow==false}}" size="small" type="default" data-index="{{mine}}" bindtap="but">
								<image src="../../../images/jrxh.png"></image>
								加入喜欢
							</van-button>
							<van-button class="right1" color="{{IsphotoShow==false&&IsLinkShow==true? '#FFF3F7': ''}}" wx:if="{{IsphotoShow==false&&IsLinkShow==true}}" size="small" type="default">
								<image src="../../../images/xh.png"></image>
								已喜欢
							</van-button>
						</view>
					</view>

					<view class="line"></view>

					<view class="mydynamic mydynamic1" data-index="{{mine.MemberID}}" bindtap="mine2">
						<view wx:if="{{IsphotoShow}}">我的动态</view>
						<view wx:else>他的动态</view>

						<view wx:if="{{con8[0]}}" class="con_tet7_4">
							<image mode="aspectFill" src="{{con8[0]}}"></image>
						</view>

						<view wx:if="{{con8[1]}}" class="con_tet7_5">
							<image mode="aspectFill" src="{{con8[1]}}"></image>
						</view>

						<view wx:if="{{con8[2]}}" class="con_tet7_6">
							<image mode="aspectFill" src="{{con8[2]}}"></image>
						</view>

						<view>
							<van-icon name="arrow" />
						</view>
					</view>
					<view class="mydynamic" data-index="{{mine.MemberID}}" bindtap="tophoto">
						<view wx:if="{{IsphotoShow}}">我的相册</view>
						<view wx:else>他的相册</view>
						<view>
							<van-icon name="arrow" />
						</view>
					</view>

