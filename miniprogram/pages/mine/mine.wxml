      <van-icon name="arrow" />
    </view>

    <text class="con_tet7_7">去申请</text>

    <view class="line"></view>
  </view>

  <view wx:if="{{member.Role==0}}" class="con_tet7" data-index="{{member.MemberID}}" bindtap="but4">
    <view class="con_tet7_1">
      <image src="../../images/lxkficon.png"></image>
    </view>

    <text class="con_tet7_2">联系客服</text>

    <view class="con_tet7_3">
      <van-icon name="arrow" />
    </view>

    <view class="line"></view>
  </view>

  <view wx:else class="con_tet7" data-index="{{member.MemberID}}" bindtap="but5">
    <view class="con_tet7_1">
      <image src="../../images/lxkficon.png"></image>
    </view>

    <text class="con_tet7_2">任务中心</text>

    <view class="con_tet7_3">
      <van-icon name="arrow" />
    </view>

    <view class="line"></view>
  </view>

  <view class="con_tet7" bindtap="toset">
    <view class="con_tet7_1">
      <image></image>
    </view>

    <text class="con_tet7_2">设置</text>

    <view class="con_tet7_3">
      <van-icon name="arrow" />
    </view>

    <view class="line"></view>
  </view>

  <view class="line"></view>
