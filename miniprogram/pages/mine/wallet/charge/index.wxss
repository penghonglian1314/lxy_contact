/* pages/mine/wallet/charge/index.wxss */
.page-content{
  
  padding:80rpx 37rpx 0 37rpx;
}
.circle{
  width: 50rpx;
  height: 50rpx;
  background: #ddd;
  border-radius: 50%;
  margin-right: 10rpx;
}

.circle image{
  width: 100%;
  height: 100%;
}

.charge .header{
  display: flex;
  align-items: center;
}
.charge .body{
  margin: 50rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.charge .body .body-item{
  width: 200rpx;
  height: 150rpx;
  border: 1px solid #F8F8F8;
  box-shadow: 5rpx 5rpx 0 0 #F8F8F8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 10rpx;
}
.charge .body .body-item .top{
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
  font-size: 14px;
}

.charge .body .body-item .top text{
  font-size: 20px;
}

.charge .body .body-item .bottom{
  color: gray;
  font-size: 14px;
  display: flex;
  align-items: center;
}
.charge .body .body-item .tag{
  position: absolute;
  top: -10rpx;
  right:-10rpx;
  font-size: 10px;
}

.charge .body .body-item .tag van-tag{
  width: 60rpx;
  height: 40rpx;
  font-size: 6px;
}

.bg{
  background: #F6F6F6;
}
.charge .van-button{
  width: 100%;
}

.but button{
  color: white;
  background: #FF0055;
}